@model PagedList.IPagedList<FacultyV3.Core.Models.Entities.Detail_News>
@{
    ViewBag.Title = "ListDetailNews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using PagedList.Mvc;
@using FacultyV3.Web.Common;
<!-- Page breadcrumb -->
<section id="mu-page-breadcrumb" style="margin-bottom: 5px; padding: 14px 0px; background-color: #087ECB">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-page-breadcrumb-area">
                    <h2>@Model[0].Category_News.Meta_Name</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End breadcrumb -->
<section id="mu-course-content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-course-content-area">
                    <div class="row">
                        <div class="col-md-9">
                            <!-- start course content container -->
                            <div class="mu-course-container mu-blog-archive">
                                <div class="row">
                                    @{
                                        int index = 0;
                                    }

                                    @foreach (var item in Model)
                                    {
                                        var url = Url.RouteUrl("DETAILNEWS", new { title = utf8Convert.Instance.ToUrlFriendly(item.Title), id = item.Id.ToString(), category = utf8Convert.Instance.ToUrlFriendly(item.Category_News.Meta_Name) });

                                        //var url = Url.Action("DetailNews", "Detail_News", new { id = item.Id, Area = String.Empty });

                                        <div class="col-md-6 col-sm-6">
                                            <article class="mu-blog-single-item">
                                                <figure class="mu-blog-single-img">
                                                    @if (!item.Url_Image.Equals("#"))
                                                    {
                                                        <a href="@url"><img src="@item.Url_Image" width="100%" height="280px" alt="img"></a>
                                                    }
                                                    else
                                                    {
                                                        <a href="@url"><img src="~/Content/image.png" width="100%" height="280px" alt="img"></a>
                                                    }

                                                    <figcaption class="mu-blog-caption" style="height: 80px">
                                                        @{ 
                                                            var s = ProcessString.Instance.ShortCutString(item.Title);
                                                        }
                                                        <h3 style=" font-size: 20px"><a href="@url"> @s</a></h3>
                                                    </figcaption>
                                                </figure>
                                                <div class="mu-blog-meta">
                                                    <a href="#">@item.Account.FullName</a>
                                                    <a href="#">@item.Update_At.ToShortDateString()</a>
                                                    <span><i class="fa fa-comments-o"></i>87</span>
                                                </div>
                                                <div class="mu-blog-description">
                                                    @*<p>@item.Description</p>*@

                                                    <a class="mu-read-more-btn" href="@url">Chi tiết</a>
                                                </div>
                                            </article>
                                        </div>

                                        if (index++ == 1)
                                        {
                                            <div class="row">
                                                <div class="col-md-6 col-sm-6"></div>
                                            </div>
                                            {
                                                index = 0;
                                            }
                                        }

                                    }

                                </div>
                            </div>
                            <!-- end course content container -->
                            <hr />
                            <div style="float: right">
                                Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) - @Model.PageCount
                            </div>

                            <div class="clearfix"></div>
                            <br />

                            <div class="mu-pagination">
                                <nav>
                                    @Html.PagedListPager(Model, page => Url.Action("LecturerView", "Lecturer", new { page }),
                                       new PagedListRenderOptions
                                       {
                                           LiElementClasses = new string[] { "page-item" }
                                       })
                                </nav>
                            </div>
                            <!-- end course pagination -->
                        </div>
                        <!--Start Left Category-->
                        @{
                            Html.RenderAction("_leftCategory", "Common");
                        }
                        <!--End Left Category-->
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


