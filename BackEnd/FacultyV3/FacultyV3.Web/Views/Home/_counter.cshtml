@model List<FacultyV3.Core.Models.Entities.Count>
<style>
.mu-abtus-counter-single .plus-counter::before { content: '+' }
    .mu-abtus-counter-single .plus-counter::before {
        content: '+'
    }
</style>
<section id="mu-abtus-counter">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-abtus-counter-area">
                    <div class="row">

                        <!-- Start counter item -->
                        <div class="col-lg-3 col-md-3 col-sm-3">
                            <div class="mu-abtus-counter-single">
                                <span class="fa fa-book"></span>
                                <h4 class="counter">@Model[0].Meta_Value</h4>
                                <p>@Model[0].Meta_Name</p>
                            </div>
                        </div>
                        <!-- End counter item -->
                        <!-- Start counter item -->
                        <div class="col-lg-3 col-md-3 col-sm-3">
                            @*fa fa-users*@
                            <div class="mu-abtus-counter-single">
                      
                                <span class="fa fa-user-secret"></span>
                                <h4 class="counter ">  @Model[1].Meta_Value.ToString()</h4>
                                <p>@Model[1].Meta_Name</p>
                            </div>
                        </div>
                        <!-- End counter item -->
                        <!-- Start counter item -->
                        <div class="col-lg-3 col-md-3 col-sm-3">
                            <div class="mu-abtus-counter-single">
                                <span class="fa fa-users"></span>
                                <h4 class="counter plus-counter">@Model[2].Meta_Value</h4>
                                <p>@Model[2].Meta_Name</p>
                            </div>
                        </div>
                        <!-- End counter item -->
                        <!-- Start counter item -->
                        <div class="col-lg-3 col-md-3 col-sm-3">
                            <div class="mu-abtus-counter-single no-border">
                                <span class="fa fa-graduation-cap"></span>
                                <h4 class="counter plus-counter">@Model[3].Meta_Value</h4>
                                <p>@Model[3].Meta_Name</p>
                            </div>
                        </div>
                        <!-- End counter item -->
                    </div>
                </div>
            </div>@*fa fa-user-secret*@
        </div>
    </div>
</section>
