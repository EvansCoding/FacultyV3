@model  List<FacultyV3.Core.Models.Entities.Video>
<section id="mu-from-blog">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-from-blog-area">
                    <!-- start title -->
                    <div class="mu-title">
                        <h2>Video</h2>
                        <p>
                            Một số video của khoa Kỹ thuật - Công nghệ
                        </p>
                    </div>
                    <div class="mu-from-blog-content">
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-md-4 col-sm-4">
                                    <article class="mu-blog-single-item">
                                        <figure class="mu-blog-single-img">
                                            @{
                                                var urlvideo = "https://www.youtube.com/embed/" + item.Url_Video + "?rel=0&autoplay=1";
                                            }

                                            <a class="mu-abtus-video" href="@urlvideo" target="mutube-video">
                                                <img src="@item.Url_Image" alt="img" height="200px"/>
                                            </a>
                                            <figcaption class="mu-blog-caption">
                                                <h3 style="font-size: 16px">@item.Title</h3>
                                            </figcaption>
                                        </figure>
                                    </article>
                                </div>
                            }
                        </div>
                    </div>
                    <!-- end from blog content   -->
                </div>
            </div>
        </div>
    </div>
</section>
