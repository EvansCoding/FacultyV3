
@{
    ViewBag.Title = "ConfirgurationView";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="data1">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h4 class="page-title">Danh sách Cấu hình</h4>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive" id="tableAjax">
                        @{
                            Html.RenderAction("LoadTable", "Confirguration");
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-url="@Url.Action("AddorUpdate","Confirguration")" style="margin: 10px 10px">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="modalcontent" style="padding: 10px 10px">

        </div>
    </div>
</div>

@section scripts{

    <script>
        function SubmitForm(form) {
            post_url = $(form).attr("action");
            $.ajax({
                type: "POST",
                url: post_url,
                data: $(form).serialize(),
                success: function (data) {
                    if (data.success) {
                        $('#exampleModal').modal('toggle');
                        $("#tableAjax").load("@Url.Action("LoadTable", "Confirguration")");
                        swal("Cập nhật thành công", "Nhấn nút dưới để thoát ra!", "success");

                    } else {
                        $('#exampleModal').modal('toggle');
                        $("#tableAjax").load("@Url.Action("LoadTable", "Confirguration")");
                        swal("Cập nhật thất bại", "Nhấn nút dưới để thoát ra!", "error");
                    }
                }
            });
            return false;
        }

        function Popup(urlMem) {
            var url = urlMem;
            $.ajax({
                url: url,
                type: 'GET',
                success: function (response) {
                    $('#modalcontent').html(response);
                    $("#exampleModal").modal("show");
                },
                error: function (xhr, status) {
                    alert(status);
                }
            });
        }

        function Delete(url) {
            swal({
                title: "Bạn chắc chắn muốn xóa?",
                text: "Nếu xóa dữ liệu sẽ không thể phục hồi được!",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
            .then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        type: "POST",
                        url: url,
                        success: function (data) {
                            if (data.success) {
                                $("#tableAjax").load("@Url.Action("LoadTable", "Confirguration")");
                                swal("Xóa thành công", {
                                    icon: "success",
                                });
                            } else {
                                $("#tableAjax").load("@Url.Action("LoadTable", "Confirguration")");
                                swal("Xóa thất bại", {
                                    icon: "error",
                                });
                            }
                        }
                    });
                }
                else {
                     swal("Dữ liệu vẫn an toàn!");
                }
            });
        }
    </script>
}




