
@{
    ViewBag.Title = "VideoView";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div id="data1">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h4 class="page-title">Danh sách Video</h4>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-row align-items-center">
                                <div class="col-auto">
                                    <button type="button" class="btn btn-info waves-effect waves-light" onclick="window.location.href='@Url.Action("AddOrEdit","Video")'">
                                        <i class="fas fa-plus "></i>
                                        <span>Thêm Video</span>
                                    </button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive" id="tableAjax">
                        @{
                            Html.RenderAction("LoadTable", "Video");
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>

        $(document).ready(function () {
            $('#search').keyup(function () {
                var name = $(this).val();
                $.ajax({
                    type: "get",
                    url: "/Admin/Video/LoadTable?search=" + name,
                    contentType: "html",
                    success: function (response) {
                        $('#tableAjax').html(response);
                    }
                })
            });
            $("nav ul li a").addClass("page-link");
            $("nav ul ").addClass("justify-content-end");
        })

        function SubmitSearch(form) {
            var name = $("#search").val();
            post_url = $(form).attr("action");
            $.ajax({
                type: "Get",
                url: "/Admin/Video/LoadTable?search=" + name,
                contentType: "html",
                success: function (response) {
                    $('#tableAjax').html(response);
                }
            });
            return false;
        }



        function Popup(urlMem) {

            var url = urlMem;
            $.ajax({
                url: url,
                type: 'GET',
                success: function (response) {
                    $('#modalcontent').html(response);
                    $("#exampleModal").modal("show");
                },
                error: function (xhr, status) {
                    alert(status);
                }
            });
        }

        function Delete(url) {
            swal({
                title: "Bạn chắc chắn muốn xóa?",
                text: "Nếu xóa dữ liệu sẽ không thể phục hồi được!",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
            .then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        type: "POST",
                        url: url,
                        success: function (data) {
                            if (data.success) {
                                $("#tableAjax").load("@Url.Action("LoadTable", "Video")");
                                swal("Xóa thành công", {
                                    icon: "success",
                                });
                            } else {
                                $("#tableAjax").load("@Url.Action("LoadTable", "Video")");
                                swal("Xóa thất bại", {
                                    icon: "error",
                                });
                            }
                        }
                    });
                }
                else {
                     swal("Dữ liệu vẫn an toàn!");
                }
            });
        }
    </script>
}

