@model  FacultyV3.Core.Models.Entities.About_Us

<section id="mu-about-us">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-about-us-area">
                    <div class="row">
                        <div class="mu-title" style="margin-bottom: 2%">
                            <h2>Giới thiệu</h2>
                        </div>
                        <div class="col-lg-6 col-md-6">

                            <div class="mu-about-us-left">

                                @Html.Raw(Model.Content)

                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6">

                            <div class="mu-about-us-right">
                                @{
                                    var urlvideo = "https://www.youtube.com/embed/" + Model.Url_Video;
                                }
                                <iframe width="100%" height="312px" src="@urlvideo" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
