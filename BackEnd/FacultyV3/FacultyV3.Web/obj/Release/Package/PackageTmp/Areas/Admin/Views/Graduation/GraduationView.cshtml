@model FacultyV3.Web.ViewModels.GraduationViewModel  
@{
    ViewBag.Title = "GraduationView";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="data1">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <h4 class="page-title">Danh sách Quy trình đào tạo</h4>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-row align-items-center">
                                <div class="col-auto">
                                    <button type="button" class="btn btn-info waves-effect waves-light" onclick="Popup('@Url.Action("AddOrEdit","Graduation", new { lecturerID = Model.LecturerID})')">
                                        <i class="fas fa-plus "></i>
                                        <span>Thêm</span>
                                    </button>
                                </div>
                                <div class="col-auto">
                                    <button type="button" class="btn btn-success waves-effect waves-light" onclick="window.location.href = '@Url.Action("LecturerView","Lecturer")'">
                                        <i class="fas fa-arrow-circle-left"></i>
                                        <span>Giảng viên</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive" id="tableAjax">
                        @{
                            Html.RenderAction("LoadTable", "Graduation", new { lecturerID = Model.LecturerID});
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-url="@Url.Action("AddorUpdate","Graduation")" style="margin: 10px 10px">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="modalcontent" style="padding: 10px 10px">

        </div>
    </div>
</div>

@section scripts{
    <script>
        function SubmitForm(form) {
            post_url = $(form).attr("action");
            $.ajax({
                type: "POST",
                url: post_url,
                data: $(form).serialize(),
                success: function (data) {
                    if (data.success) {
                        $('#exampleModal').modal('toggle');

                        
        
                        $("#tableAjax").load("@Url.Action("LoadTable", "Graduation", new { id = Model.LecturerID })");
                        swal(data.message, {
                            icon: "success",
                        });
                    } else {
                        $('#exampleModal').modal('toggle');
                        $("#tableAjax").load("@Url.Action("LoadTable", "Graduation", new { id = Model.LecturerID })");
                        swal(data.message, {
                            icon: "error",
                        });
                    }
                }
            });
            return false;
        }

        function Popup(urlMem) {
            var url = urlMem;
            $.ajax({
                url: url,
                type: 'GET',
                success: function (response) {
                    $('#modalcontent').html(response);
                    $("#exampleModal").modal("show");
                },
                error: function (xhr, status) {
                    alert(status);
                }
            });
        }

        function Delete(url) {
            swal({
                title: "Bạn chắc chắn muốn xóa?",
                text: "Nếu xóa dữ liệu sẽ không thể phục hồi được!",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
            .then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        type: "POST",
                        url: url,
                        success: function (data) {
                            if (data.success) {
                                $("#tableAjax").load("@Url.Action("LoadTable", "Graduation", new { id = Model.LecturerID })");
                                swal("Xóa thành công", {
                                    icon: "success",
                                });
                            } else {
                                $("#tableAjax").load("@Url.Action("LoadTable", "Graduation", new { id = Model.LecturerID })");
                                swal("Xóa thất bại", {
                                    icon: "error",
                                });
                            }
                        }
                    });
                }
                else {
                     swal("Dữ liệu vẫn an toàn!");
                }
            });
        }
    </script>
}


