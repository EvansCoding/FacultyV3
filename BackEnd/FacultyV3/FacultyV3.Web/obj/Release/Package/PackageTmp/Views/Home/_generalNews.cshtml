@model List<FacultyV3.Core.Models.Entities.Detail_News>
@using FacultyV3.Web.Common;

<section id="mu-latest-courses">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="mu-latest-courses-area">
                    <!-- Start Title -->
                    <div class="mu-title">
                        <h2>Tin Mới Nhất</h2>
                    </div>
                    <!-- End Title -->
                    <!-- Start latest course content -->


                    <div id="mu-latest-course-slide" class="mu-latest-courses-content">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-4 col-md-4 col-xs-12">
                                <div class="mu-latest-course-single">
                                    <figure class="mu-latest-course-img">

                                        @{
                                            var strTitle = item.Title.Count() <= 120 ? item.Title : item.Title.Substring(0, 120);
                                            var url = Url.RouteUrl("New News", new { title = utf8Convert.Instance.ToUrlFriendly(strTitle), id = item.Id.ToString() });

                                            //var url = Url.Action("DetailNews", "Detail_News", new { id = item.Id });
                                        }
                                        @if (!item.Url_Image.Equals("#"))
                                        {

                                            <a href="@url"><img src="@item.Url_Image" alt="img" height="220px" width="auto" /></a>
                                        }
                                        else
                                        {
                                            <a href="@url"><img src="~/Content/image.png" alt="img" height="220px" width="auto" /></a>
                                        }
                                        <figcaption class="mu-latest-course-imgcaption">
                                            <a href="#">@item.Account.FullName</a>
                                            <span><i class="fa fa-clock-o"></i>@item.Update_At.ToShortDateString()</span>
                                        </figcaption>
                                    </figure>
                                    <div class="mu-latest-course-single-content" style="height: 180px">
                                        <h4 style="height: 64%; text-align: justify; font-family: Verdana, Geneva, Tahoma, sans-serif;">

                                            <a href="@url" class="block-ellipsis" style="height: 100%">@item.Title</a>
                                        </h4>
                                        <div class="mu-latest-course-single-contbottom" style="margin-top: 0px">
                                            <a class="mu-course-details" href="@url">Chi tiết</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <!-- End latest course content -->
                </div>
            </div>
        </div>
    </div>
</section>
