<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Khoa Kỹ thuật - Công nghệ</title>

    @{
        Html.RenderAction("MetaView", "Confirguration", new { Area = String.Empty });
    }

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/Client/assets/img/logo/logokonen.ico" type="image/x-icon" />

    <link href="~/Content/Client/assets/css/owl.theme.default.min.css" rel="stylesheet" />
    <link href="~/Content/Client/assets/css/owl.carousel.min.css" rel="stylesheet" />

    @Styles.Render("~/css/client")

    <link href="~/Content/Client/assets/css/datatables.css" rel="stylesheet" />

</head>

<body>

    @{
        Html.RenderAction("MessengerView", "Confirguration", new { Area = String.Empty });
    }
    <!--START SCROLL TOP BUTTON -->
    <a class="scrollToTop" href="#">
        <i class="fa fa-angle-up"></i>
    </a>

    <header>
        <div class="container">
            <div class="row" style="color: slategrey; width: 10px;"></div>
        </div>
    </header>
    <!-- End header  -->
    <!-- Start menu -->
    @{
        Html.RenderAction("_menu", "Home", new { Area = String.Empty });
    }
    <!-- End menu -->
    <!-- Start search box -->
    @*<div id="mu-search">
            <div class="mu-search-area">
                <button class="mu-search-close">
                    <span class="fa fa-close"></span>
                </button>
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <form class="mu-search-form">
                                <input type="search" placeholder="Type Your Keyword(s) & Hit Enter" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>*@
    <!-- End search box -->
    @RenderBody()
    <!-- Start footer -->
    @{
        Html.RenderAction("_footer", "Home", new { Area = String.Empty });
    }
    <!-- End footer -->
    <!-- start Icons Nav Left-->
    @{
        Html.RenderAction("_sticky", "Home", new { Area = String.Empty });
    }
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    @Scripts.Render("~/script/client")
    <script src="~/Content/Client/assets/js/owl.carousel.min.js"></script>

    <script src="~/Scripts/jquery.signalR-2.2.2.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <script src="~/Content/Client/assets/js/datatables.js"></script>
    <script>

        $(function () {
            $('#myStudent').DataTable({
                "lengthMenu": [[5, 25, 50, -1], [5, 25, 50, "All"]],
                "bPaginate": true,
                "bLengthChange": false,
                "bFilter": true,
                "bInfo": false,
                "scrollX": true,
                "autoWidth": false,
                "oLanguage": {
                    "sSearch": "Tìm kiếm",
                    "oPaginate": {
                        "sFirst": "Trang đầu", // This is the link to the first page
                        "sPrevious": "Trang trước", // This is the link to the previous page
                        "sNext": "Trang kế tiếp", // This is the link to the next page
                        "sLast": "Trang cuối cùng" // This is the link to the last page
                    }
                }
            });

            var owl = $('.owl-carousel');
            owl.owlCarousel({
                items: 3,
                loop: true,
                margin: 8,
                stagePadding: 6,
                autoplay: true,
                autoplayTimeout: 5000,
                autoplayHoverPause: true,
                autoHeight: false,
                dots: false,
                responsive: {
                    0: { items: 1 },
                    605: { items: 3 },
                    670: { items: 3 },
                    1250: { items: 3 },
                    1520: { items: 3 }
                },
            });


            $.connection.hub.start();
            var cHub = $.connection.HitCounter;


            cHub.client.UpdateCount = function (count, totalAccess) {
                $('#counter').text(count);
                $('#total').text(totalAccess);

            }
            window.onbeforeunload = function (e) {
                $.connection.hub.stop();
            };
        });


    </script>


</body>
</html>
